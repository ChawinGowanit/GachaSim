#rateModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :tabindex => "-1"}
	.modal-dialog.bg-light
		.modal-content
			.modal-header
				%h5#exampleModalLabel.modal-title Items included in banner
				%button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
		#body.modal-body
			%table.table
				%thead
					%tr
						%th{:scope => "col"} Item
						%th{:scope => "col"} Item name
						%th{:scope => "col"} Rarity
				%tbody
					- i = 1
					- @bItem.each do |item|

						%tr
							%th.align-middle{:scope => "row"}
								= image_tag("#{item[2]}",:size => "50x57")
							%td.align-middle #{item[0]}
							%td.align-middle #{item[1]}
						- i+=1
		.modal-footer
			%button.btn.btn-danger.btn-lg{"data-bs-dismiss" => "modal", :type => "button"} Close

:javascript
	$(".xyz").click(function(){
		var myModal = new bootstrap.Modal(document.getElementById('rateModal'), {})
		myModal.show();
	})